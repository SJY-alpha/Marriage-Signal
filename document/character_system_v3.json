  "generation_logic": {
    "gender": "auto", 
    "pipeline": [
      "apply_mbti_defaults(appearance_ko,fashion_ko,hair_ko,voice_candidates_by_gender,default_pitch_speed)",
      "per_section_override_with_probability(0.3)"
    ],
    "override_rules": {
      "voice": {
        "select_from_gender_pool": true,
        "select_best_tone_for_scenario": true,
        "fine_tune": {
          "speaking_rate_range": [0.85, 1.5],
          "pitch_range": [-2.0, 2.0]
        }
      },
      "appearance": {"strategy": "scenario_fit"},
      "fashion": {"strategy": "scenario_fit"},
      "hair": {"strategy": "scenario_fit"}
    }
  },

  "nl_templates": {
    "to_english": {
      "appearance": "A person with {{appearance_ko}}.",
      "fashion": "Wearing {{fashion_ko}}.",
      "hair": "Hairstyle: {{hair_ko}}."
    },
    "compose_image_prompt": "{{appearance_en}} {{fashion_en}} {{hair_en}} Cinematic portrait, natural lighting, highly detailed."
  },

  "ui": {
    "personality_selector": ["MBTI_16","AI_RANDOM"],
    "ai_random_selected_default": true,
    "editor_flags": {
      "show_ai_random_checked_in_personality_panel": true,
      "apply_buttons": {
        "apply_reference_image_all_cuts": true,
        "apply_voice_all_cuts": true
      },
      "scenario_micro_adjust_button": true
    },
    "behavior": {
      "on_personality_change": [
        "recompute_mbti_defaults",
        "recompute_voice_tone_pitch_speed",
        "update_reference_prompt_and_tts"
      ],
      "on_micro_adjust": "scenario_editor_fine_tunes_dialogue_to_personality"
    }
  },

